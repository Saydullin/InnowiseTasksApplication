<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".design.DynamicActivity">

    <Button
        android:id="@+id/button_hide_and_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide and Show" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/button_add_and_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add and Remove"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <Button
        android:id="@+id/button_add_alpha_and_remove_alpha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add alpha and Remove alpha"/>

</LinearLayout>