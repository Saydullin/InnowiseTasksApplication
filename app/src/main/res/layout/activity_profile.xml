<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".design.ProfileActivity"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@null"
        android:padding="8dp"
        android:src="@drawable/more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/profile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/H1Title"
            android:text="Model winner of 2018 Tokyo Art costume design week" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginVertical="30dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/circle_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/H3Title"
                    android:text="Izabella Zhang" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="7dp" />

                <TextView
                    android:id="@+id/profile_online_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 Days Ago" />

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="normal"
                android:text="+Follow" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recommended by:" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 / 56 users" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_background" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="-6dp"
                    android:layout_toEndOf="@+id/image1"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/circle_background" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="-6dp"
                    android:layout_toEndOf="@+id/image2"
                    android:background="@drawable/circle_background" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="-6dp"
                    android:layout_toEndOf="@+id/image3"
                    android:backgroundTint="@color/blue"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:id="@+id/image5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="-6dp"
                    android:layout_toEndOf="@+id/image4"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/gray"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="+36" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/view"
                    android:layout_marginHorizontal="5dp"
                    android:alpha=".3" />

                <TextView
                    android:id="@+id/profile_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.615" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/comment"
                    android:layout_marginHorizontal="5dp"
                    android:alpha=".3" />

                <TextView
                    android:id="@+id/profile_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="368" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/like"
                    android:layout_marginHorizontal="5dp"
                    android:alpha=".3" />

                <TextView
                    android:id="@+id/profile_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="991" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>